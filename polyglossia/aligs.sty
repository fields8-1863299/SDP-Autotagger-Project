%%%%%%%%%%%%%%%%%%%%%% ttah %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def \ttah@lig #1#2{% ttah, tthah
% c1 c3
\put@tatwil \@mod@acttrue 
