                        \set@chr\sk@l@m
        \fi
\or \act@hah \set@chr\sk@b@e@h                         % 1 YntCbyp
\or \act@hah \chr@tie\a@mh@to@s \chr@sin               % 2 sxSD
\else   \ifnum \chr@cls = 9                            % \a@t \a@n
        \act@hah \set@chr\sk@b@e@h
        \else \put@tatwil 
